<div class="profile_pic">
  <img src="{{owner.profile_pic.thumbnail_url}}">
</div>
<div class="data">
  <div class="info">
    <strong class="author">{{owner.name}}</strong>
    <div class="time">
      {{group.name}} · <span class="timeago" title="{{created_at}}"></span>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="text">
    <p>Está ofreciendo un libro:</p>
    <div><strong>Título:</strong> {{title}}</div>
    <div><strong>Autor:</strong> {{author}}</div>
    <div><strong>Editorial:</strong> {{publisher}}</div>
    <div><strong>Para:</strong> {{t_offer_type}}</div>
    <div><strong>Precio:</strong> ${{price}}</div>
    <div>{{additional_info}}</div>
    <div>{{contact_info}}</div>
  </div>
  <a class="reply_link" href="#">
    <i class="icon-share-alt"></i> {{t_reply}}
  </a>
</div>
<div class="clearfix"></div>