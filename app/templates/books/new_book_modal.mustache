<div class="row">
  <button class="btn btn-success" data-toggle="modal" href="#book_modal" >
    <i class="icon-plus"></i>
    {{t_add_book}}
  </button>
</div>

<div class="modal hide" id="book_modal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h3>{{t_add_book}}</h3>
  </div>

  <form class="new_book">
    <div class="modal-body">
      <div class="row">
        <div class="field"><input name="title" placeholder="{{t_title}}"></div>
        <div class="field"><input name="author" placeholder="{{t_author}}"></div>
      </div>
      <div class="row">
        <div class="field"><input name="publisher" placeholder="{{t_publisher}}"></div>
        <div class="field">
          <select name="offer_type">
            <option value="">{{t_offer_type}}...</option>
            <option value="gift">{{t_gift}}</option>
            <option value="borrow">{{t_borrow}}</option>
            <option value="loan">{{t_loan}}</option>
            <option value="sale">{{t_sale}}</option>
          </select>
          <input name="price" placeholder="{{t_price}}">
        </div>
      </div>
      <div class="row">
        <div class="field">
          <textarea name="additional_info" placeholder="{{t_additional_info}}"></textarea>
        </div>
        <div class="field">
          <textarea name="contact_info" placeholder="{{t_contact_info}}"></textarea>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <input class="btn btn-primary disabled" name="commit" type="submit" value="{{t_submit}}">
    </div>
  </form>
</div>