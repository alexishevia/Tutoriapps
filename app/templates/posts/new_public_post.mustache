  <div class="hidden">
    <select id="post_group_id" name="group_id">
      {{#groups}}
        <option value="{{id}}">{{name}}</option>
      {{/groups}}
    </select>
    <input class="btn" name="commit" type="submit" value="Crear Post">
  </div>
</form>