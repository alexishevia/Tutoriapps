<div class="timeline">
  <!-- Elegir Grupo -->
  <ul class="nav nav-pills">
    <li class="active"><%= link_to I18n.t('activerecord.attributes.group.all'), 
      group_path('all'), :remote => true, :class => 'change_group',
      'data-type' => 'html' %></li>
    <% for group in @groups %>
      <li>
        <%= link_to group.name, group, :remote => true, :class => 'change_group' %>
      </li>
    <% end %>
  </ul>

  <!-- Crear Post Nuevo -->
  <%= simple_form_for [@post], :remote => true, :html => {'data-type' => 'html'} do |f| %>
    <%= f.input :text, :label => false %><%= f.button :submit %>
  <% end %>

  <!-- Ver Posts -->
  <div class="posts">
    <%= render :partial => '/posts/post', :collection => @posts %>
  </div>
</div>