<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">
        Tutoriapps
      </a>
    </div>
  </div>
</div>

<div class= "container">
  <div class= "front-welcome">
    <div class= "front-welcome-text">
      <h1>Bienvenido a Tutoriapps</h1>
      <p> Aprende. Comparte. Ense√±a</p>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6">
      <div class= "front-signin">
        <%= form_for resource, :url => registration_path(resource_name), 
        :as => resource_name, :html => { :class => 'sign_up' } do |f| 
        %>
        <%= devise_error_messages! %>

          <div><%= f.text_field :name,
            'placeholder' => I18n.t('activerecord.attributes.user.name') %></div>

          <div><%= f.email_field :email,
            'placeholder' => I18n.t('activerecord.attributes.user.email') %></div>

          <div><%= f.password_field :password,
            'placeholder' => I18n.t('activerecord.attributes.user.password') %>
          </div>

          <div><%= f.password_field :password_confirmation,
            'placeholder' => I18n.t('activerecord.attributes.user.password_confirmation')%></div>

          <div><%= f.submit I18n.t('devise.sign_up') %></div>
        <% end %>
      </div>
    </div>

    <div class="span6">
      <div class= "front-signup">
        <%= form_for resource, :url => session_path(resource_name),
        :as => resource_name, :html => { :class => 'sign_in' } do |f| %>
          <div><%= f.email_field :email, 
            'placeholder' => I18n.t('activerecord.attributes.user.email') %>
          </div>
          <div><%= f.password_field :password,
            'placeholder' => I18n.t('activerecord.attributes.user.password') %>
          </div>

          <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>

          <div><%= f.submit I18n.t('devise.sign_in') %></div>
        <% end %>
      </div>
    </div>
  </div>  
</div>