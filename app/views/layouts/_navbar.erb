<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" 
      data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to 'Tutoriapps', root_path, :class => 'brand' %>
      <div class="brand"><span class="slogan"> 
        Aprende · Comparte · Enseña</span></div>
      <div class="nav-collapse">
        <% if user_signed_in? %>
          <ul class="nav pull-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Sign out", destroy_user_session_path, 
                  :method => :delete %></li>
              </ul>
            </li>
          </ul>
        <% else %>
          <ul class="nav pull-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <b>Inicia Sesión</b> <b class="caret"></b>
              </a>
              <!-- Sign In Form -->
              <%= simple_form_for(resource, :url => session_path(resource_name),
                :as => resource_name, :html => { :class => 'sign_in form-vertical dropdown-menu' } 
                ) do |f| 
              %>
                <%= f.input :email, :label => false, :placeholder => I18n.t(
                  'activerecord.attributes.user.email') %>
                <%= f.input :password, :label => false, :placeholder => I18n.t(
                  'activerecord.attributes.user.password') %>
                <% if devise_mapping.rememberable? %>
                  <%= f.input :remember_me, :as => :boolean, 
                    :wrapper => :checkbox %>
                <% end %>
                <%= f.button :submit, I18n.t('devise.sign_in') %>
                <%= link_to I18n.t('devise.passwords.forgot?'), 
                new_password_path(resource_name), :class => 'forgot_password' %>
              <% end %>
              <!-- End Sign In Form -->
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>